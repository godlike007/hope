.art-header{
    position: relative;
    width: 100%;
    height: 219px;
    color: #FFF;
}

.art-img{
    width: 100%;
    height: 219px;
}

.art-title{
    position: absolute;
    bottom: 36px;
    left: 8px;
    font-size: 16px;
}

.art-source {
    position: absolute;
    bottom: 8px;
    font-size: 14px;
    right: 8px;   
}

.art-content{
    padding-top: 16px;
    padding-bottom: 16px;
    font-size: 14px;
    color: #616466;
    width: 100%;
}

.detal_items{
    border:1px solid #d4a780;
    width:80%;
    font-size:14px;
    padding:5%;
    border-radius: 5px;
    
}
.detal_items .symptoms,
.detal_items .sign,
.detal_items .certificate{  
    height:100rpx;
}

.detal_items .label{  
    width:21%;
    float:left;
    color: #ae775a;
    text-align:right;
    font-weight: bold;

}
.detal_items .list{  
    width:75%;
    flex-direction:row;
    float:left;
    margin-left:4%;
    
}

.detal_items  .item{  
    padding:0px 5%;
    height:80rpx;
    width:auto;
    float:left;
    background-color:#eee;
    margin:3% 1%;
    line-height:80rpx;
    border-radius: 3px;
}

.detal_items .item.item-seleted{
    background-color: #e8c1a0;
    color:#fff;
    color: #ae775a;
 

}
.item-list{
    width:100%;
height:135rpx;

}
button{
    margin-top: 100rpx;
    background-color: #e8c1a0;
    color: #fff;
    border-radius: 0px;
    width: 60%;
    margin-bottom:50rpx;

}
.red{
    color:red;
    display:inline-block;
    width: 100%;
    
}
.normal{
    display:inline-block;
    margin-left:3%;
    width: 100%;
}