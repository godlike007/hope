<!--pages/pingroup/index.wxml-->
<view>
 <view style="height:300rpx;">
  <image src="https://jtljia.oss-cn-hangzhou.aliyuncs.com/jia-web/f2/2019/12/12/9a2102888d7243b3aeb0f22695bea683.jpg" data-src="https://jtljia.oss-cn-hangzhou.aliyuncs.com/jia-web/f2/2019/12/12/9a2102888d7243b3aeb0f22695bea683.jpg" class="header_pic"></image>
  </view>

 <view>
  <view class='header-title'>拼团购，嗨起来</view>

  <view class='history-table-wrap'>
  <view class="table">
    <!--<view class="tr">
      <view class="th th1">活动名称</view>
      <view class="th th2">活动价格</view>
    </view>
    -->
    <view wx:if="{{activityList.length  >0 }}">
      <view class="tr" wx:for="{{activityList}}" wx:for-item="order" data-cid='{{order.id}}'>
        <view class="td td1">
          <navigator url="/pages/pingroup/activity_detail?activityId={{order.id}}">
           <image src="https://book.yunzhan365.com/boju/qxdj/files/mobile/{{order.id+5}}.jpg?x-oss-process=image/resize,w_380/auto-orient,1/quality,q_95/format,jpg" data-src="" class="header_pic"></image>
           </navigator>
        </view>
        <view class="td td1">
          <view>{{order.name}}</view>
          
          <view style="margin-top: 138rpx;">￥ {{order.price}}元/m²  已团40人</view>
          <view class="td_pin">
            <navigator style="width: 76rpx;" url="/pages/pingroup/activity_detail?activityId={{order.id}}">
              <button class="goGroupBtn">去拼单</button>
            </navigator>
          </view>

        </view>
        
        <!-- <view class="td td2">{{order.price}}元/m²</view> -->
      </view>
    </view>
    <view wx:if="{{activityList.length ==0 }}">
        <view class="td td5">加载中.....</view>
    </view>
  </view>
  </view>
  <!-- 
  <view>
  <navigator url="/pages/baoxiu/baoxiu_create" open-type="switchTab">
      新建报单
  </navigator>
    </view>
    -->
 </view>
</view>
