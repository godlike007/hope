  text-align: center;
}
.indexIcon{
  width: 40rpx;
  height: 40rpx;
}
.indexIcon-view
{
  line-height: 45rpx;
  padding-top: 10rpx;
}
.index-tab-txt{
  line-height: 29rpx;
}
.bottom-buy-tab{
  width:25%;
  display: inline-block;
  background-color: #f76841;
  color:#fff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}
