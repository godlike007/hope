  margin-bottom: 100rpx;
}
.title{
  text-align: center;
  font-size: 35rpx;
}
.img-div{
  text-align:center;
  margin-top: 60rpx;
}
.img{
  width: 528rpx;
  height: 528rpx;
}
.bottom-buy-tabBar{
  position: fixed;
  width:100%;
