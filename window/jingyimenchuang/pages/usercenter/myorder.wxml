<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap='clickTab'>全部</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap='clickTab'>待付款</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap='clickTab'>待发货 </view>
  <view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap='clickTab'>待收货</view>
  <view class="swiper-tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap='clickTab'>已完成</view>
</view>

<view class="shachuang_floor">
<swiper class="swiper" current="{{curentTab}}" duration="300" bindchange="swiperTab">
  <!--精选门窗 style="display:{{currentTab != 10001 ? 'none' : 'block'}}" -->
  <swiper-item >
  <block wx:for="{{orderList}}" wx:for-item="order" >
      <view class="dividing_line"><text>\n</text></view>
       <view class='header-title'>
        <view class="product-price-v">
          <text>{{order.createTime}}</text> <view class="statusDesc">{{order.statusDesc}}</view>
        </view> 

        <view class="ensure">
          <block><image src="{{order.url}}?x-oss-process=image/resize,w_80/auto-orient,1/quality,q_95/format,jpg" style="width:156rpx;height:156rpx;"></image></block>
          <view class="product-text">
            <view>{{order.productName}}</view>
            <view class="guige">规格：标准</view>
          </view>
          <view class="price-text">
            <view style="color:#f66741;">{{order.subtotal}}元</view>
            <view class="guige">×{{order.qty}}</view>
            <view wx:if="{{order.statusDesc == '待付款'}}" class="topay">
              <navigator url="/pages/settlement/order_settlement?orderId={{order.orderId}}&orderType={{order.orderType}}"><button type="primary" class="topayBtn">去支付</button></navigator>
            </view>
          </view>
        </view>
      </view>
   </block>
        


    <view wx:if="{{orderList == null || orderList.length ==0 }}">
      <view class="no_online_product"> 您还没有订单哦~</view>
    </view>
    </swiper-item>
</swiper>
</view>
