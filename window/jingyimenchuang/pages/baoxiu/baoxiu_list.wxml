<!--pages/baoxiu/baoxiu_list.wxml-->
<view>
 <view style="height:300rpx;">
  <image src="https://jtljia.oss-cn-hangzhou.aliyuncs.com/jia-web/2019/11/18/029793053e0f488999d250eb60abd888.gif" data-src="https://jtljia.oss-cn-hangzhou.aliyuncs.com/jia-web/2019/11/18/029793053e0f488999d250eb60abd888.gif" class="header_pic"></image>
  </view>

 <view>
  <view class='header-title'>我的报修</view>

  <view class='history-table-wrap'>
  <view class="table">
    <view class="tr">
      <view class="th th1">日期</view>
      <view class="th th2">报修详情</view>
      <view class="th th3">状态</view>
    </view>
    <view wx:if="{{orderList.length  >0 }}">
      <view class="tr" wx:for="{{orderList}}" wx:for-item="order" data-cid='{{order.rid}}' bindtap='redirect'>
        <view class="td td1">{{order.createTime}}</view>
        <view class="td td2">{{order.problem}}</view>
        <view class="td td3">{{order.statusDesc}}</view>
      </view>
    </view>
    <view wx:if="{{orderList.length ==0 }}">
        <view class="td td5">你还没有订单哦~</view>
    </view>
  </view>
  </view>
